{
    "name": "nish/phpstan-namespace-dependency",
    "description": "Extension of PHPStan: Namespace Dependency Rules",
    "require": {
        "php": "~7.1 || ~8.0",
        "phpstan/phpstan": "^2.1"
    },
    "require-dev": {
        "phpstan/phpstan-phpunit": "*",
        "phpunit/phpunit": "^8.0",
        "nikic/php-parser": "*",
        "nette/di": "^3.0",
        "squizlabs/php_codesniffer": "*",
        "dealerdirect/phpcodesniffer-composer-installer": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Satoshi Nishimura",
            "email": "nishim314@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Nish\\PHPStan\\NsDepends\\": "src/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ],
        "files": [
            "tests/Rules/data/data.php",
            "tests/Rules/data/classdef.php",
            "tests/Rules/data/assign.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
